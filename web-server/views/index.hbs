<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Weather App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background: #3498db;
            margin: 0;
            padding: 0;
            overflow: hidden;
            color: #f0f0f0;
            height: 100vh;
            position: relative;
        }
        .container {
            margin-top: 20%;
            z-index: 2;
            position: relative;
        }
        h1 {
            font-size: 3em;
        }
        p {
            font-size: 1.2em;
        }
        .btn {
            background-color: #fff;
            color: #3498db;
            border: none;
            padding: 12px 24px;
            font-size: 1em;
            border-radius: 5px;
            cursor: pointer;
            margin: 10px;
            text-decoration: none;
            display: inline-block;
        }
        .btn:hover {
            background-color: #ddd;
        }

        .cloud {
            background: #ecf0f1;
            border-radius: 50%;
            position: absolute;
            opacity: 0.7;
            animation: moveClouds linear infinite;
        }
        .cloud:before, .cloud:after {
            content: '';
            background: #ecf0f1;
            position: absolute;
            border-radius: 50%;
        }
        .cloud:before {
            width: 80%;
            height: 80%;
            top: -20%;
            left: 10%;
        }
        .cloud:after {
            width: 60%;
            height: 60%;
            top: 20%;
            left: 60%;
        }

        @keyframes moveClouds {
            0% { left: -200px; }
            100% { left: 110%; }
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Welcome to the Weather App!</h1>
        <p>Get real-time weather updates or learn more about us.</p>

        <div>
            <a href="/weather" class="btn">Check Weather</a>
            <a href="/about" class="btn">About Us</a>
        </div>
    </div>

    <script>
        const numberOfClouds = 7;

        for(let i = 0; i < numberOfClouds; i++) {
            const cloud = document.createElement('div');
            cloud.classList.add('cloud');

            const size = Math.random() * 100 + 50; 
            cloud.style.width = size + 'px';
            cloud.style.height = size / 2 + 'px';

            cloud.style.top = Math.random() * window.innerHeight * 0.6 + 'px';

            cloud.style.animationDuration = (30 + Math.random() * 40) + 's';

            document.body.appendChild(cloud);
        }
    </script>
</body>
</html>
